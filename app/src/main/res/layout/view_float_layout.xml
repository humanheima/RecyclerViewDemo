<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFloatImage"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/ic_balloon"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="悬浮布局"
        app:layout_constraintBottom_toBottomOf="@+id/ivFloatImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFloatImage"
        app:layout_constraintTop_toTopOf="@+id/ivFloatImage" />

</android.support.constraint.ConstraintLayout>